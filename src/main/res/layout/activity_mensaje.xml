<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karla.guia3.Mensaje">

    <ListView
        android:id="@+id/lstMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/linearLayout"
        tools:ignore="RtlHardcoded" />
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_alignParentLeft="true"
            android:id="@+id/txtEntrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/btnEnviar"
            android:layout_toLeftOf="@+id/btnEnviar"
            tools:ignore="LabelFor,RtlHardcoded,TextFields" />

        <Button
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="@string/enviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnEnviar"
            tools:ignore="RtlHardcoded" />
    </RelativeLayout>

</RelativeLayout>
